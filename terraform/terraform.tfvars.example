# AWS Configuration
aws_region   = "us-east-1"
environment  = "dev"
project_name = "project-3tier-web-app"

# Network Configuration
vpc_cidr                = "10.0.0.0/16"
public_subnet_cidrs     = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs    = ["10.0.11.0/24", "10.0.12.0/24"]
database_subnet_cidrs   = ["10.0.21.0/24", "10.0.22.0/24"]

# EC2 Configuration
instance_type = "t3.micro"
key_name      = "3tier-app-key"  # Change this to your SSH key pair name

# Database Configuration
db_instance_class = "db.t3.micro"
db_name           = "appdb"
db_username       = "admin"
db_password       = "ChangeThisPassword123!"  # IMPORTANT: Change this to a strong password

# Security Configuration
allowed_cidr_blocks = ["0.0.0.0/0"]  # Restrict this to your IP for production
